<!-- HIDDEN FILE INPUT -->
<input type="file" id="fileInput2" accept="image/*" style="display:none" onchange="handleFileUpload(event)">

<script>
  // ‚îÄ‚îÄ DRAG ‚îÄ‚îÄ
  let dragging = null, ox = 0, oy = 0;

  function startDrag(e, el) {
    if (e.target.tagName === 'INPUT' || e.target.tagName === 'TEXTAREA') return;
    dragging = el;
    const r = el.getBoundingClientRect();
    ox = e.clientX - r.left;
    oy = e.clientY - r.top;
    el.style.zIndex = 100;
    el.style.transition = 'none';
    e.preventDefault();
  }

  document.addEventListener('mousemove', e => {
    if (!dragging) return;
    const page = document.getElementById('diaryPage').getBoundingClientRect();
    let x = e.clientX - page.left - ox;
    let y = e.clientY - page.top - oy;
    dragging.style.left = x + 'px';
    dragging.style.top = y + 'px';
  });

  document.addEventListener('mouseup', () => {
    if (dragging) { dragging.style.zIndex = ''; dragging = null; }
  });

  function stopPropIfText(e) { /* allow text selection */ }

  // ‚îÄ‚îÄ STICKERS ‚îÄ‚îÄ
  function addSticker(emoji) {
    const page = document.getElementById('diaryPage');
    const s = document.createElement('div');
    s.className = 'sticker plopping';
    s.textContent = emoji;
    s.style.top = (80 + Math.random() * 400) + 'px';
    s.style.left = (40 + Math.random() * 350) + 'px';
    s.style.transform = `rotate(${(Math.random()-0.5)*20}deg)`;
    s.onmousedown = (e) => startDrag(e, s);
    page.appendChild(s);
    showToast(emoji + ' sticker added!');
  }

  // ‚îÄ‚îÄ TAPE ‚îÄ‚îÄ
  function addTape(type) {
    const page = document.getElementById('diaryPage');
    const t = document.createElement('div');
    t.className = 'tape tape-' + type;
    t.style.width = (50 + Math.random() * 80) + 'px';
    t.style.top = (20 + Math.random() * 500) + 'px';
    t.style.left = (20 + Math.random() * 400) + 'px';
    t.style.transform = `rotate(${(Math.random()-0.5)*12}deg)`;
    page.appendChild(t);
    showToast('Washi tape added! üéÄ');
  }

  // ‚îÄ‚îÄ POLAROID FROM FILE ‚îÄ‚îÄ
  let currentFilter = 'normal';
  let currentFrame = 'classic';

  function handleFileUpload(e) {
    const file = e.target.files[0];
    if (!file) return;
    const reader = new FileReader();
    reader.onload = (ev) => {
      addPolaroid(ev.target.result);
      closePhotoModal();
    };
    reader.readAsDataURL(file);
  }

  function addPlaceholderPolaroid() {
    addPolaroid(null);
    closePhotoModal();
  }

  function addPolaroid(src) {
    const page = document.getElementById('diaryPage');
    const pol = document.createElement('div');
    pol.className = 'polaroid plopping';
    pol.style.top = (30 + Math.random() * 200) + 'px';
    pol.style.left = (20 + Math.random() * 300) + 'px';
    pol.style.transform = `rotate(${(Math.random()-0.5)*10}deg)`;
    pol.style.zIndex = 10;
    pol.onmousedown = (e) => startDrag(e, pol);

    let imgEl;
    if (src) {
      imgEl = document.createElement('img');
      imgEl.className = 'polaroid-img developing ' + (currentFilter !== 'normal' ? currentFilter : '');
      imgEl.src = src;
      imgEl.style.width = '160px';
      imgEl.style.height = '160px';
      imgEl.style.objectFit = 'cover';
      imgEl.style.display = 'block';
    } else {
      imgEl = document.createElement('div');
      imgEl.style.cssText = 'width:160px;height:160px;background:linear-gradient(135deg,#d4c5b0,#b8a898);display:flex;align-items:center;justify-content:center;';
      imgEl.innerHTML = '<div style="text-align:center;color:rgba(255,255,255,0.7);font-family:Caveat,cursive;font-size:14px">üì∑<br>sample</div>';
    }

    const cap = document.createElement('input');
    cap.className = 'polaroid-caption';
    cap.placeholder = 'caption...';
    cap.onmousedown = (e) => e.stopPropagation();

    pol.appendChild(imgEl);
    pol.appendChild(cap);
    page.appendChild(pol);

    showToast('üì∏ Polaroid developing...');
    setTimeout(() => showToast('‚ú¶ Ready!'), 2000);
  }

  // ‚îÄ‚îÄ FILTERS & FRAMES ‚îÄ‚îÄ
  function selectFilter(f, el) {
    currentFilter = f;
    document.querySelectorAll('.filter-opt').forEach(x => x.classList.remove('selected'));
    el.classList.add('selected');
  }

  function selectFrame(f, el) {
    currentFrame = f;
    document.querySelectorAll('.frame-opt').forEach(x => x.classList.remove('selected'));
    el.classList.add('selected');
  }

  function selectPen(color, el) {
    document.querySelectorAll('.pen-opt').forEach(x => x.classList.remove('selected'));
    el.classList.add('selected');
    const colors = { blue: '#3a5a8c', red: '#9B2335', pencil: '#888', dark: '#2C2416' };
    document.querySelectorAll('.diary-note').forEach(n => n.style.color = colors[color]);
  }

  // ‚îÄ‚îÄ DIARY ENTRIES ‚îÄ‚îÄ
  function selectEntry(el, label) {
    document.querySelectorAll('.diary-entry').forEach(e => e.classList.remove('active'));
    el.classList.add('active');
    document.getElementById('pageTitle').textContent = label + ' ‚ú¶';
    showToast('üìñ ' + label);
  }

  // ‚îÄ‚îÄ THEMES ‚îÄ‚îÄ
  const themes = {
    linen:  { '--bg':'#F5F0E8', '--paper':'#FAF7F2', '--accent':'#9B2335', '--blue':'#7B8FA6', '--ink':'#2C2416' },
    sunday: { '--bg':'#EEF2F7', '--paper':'#F5F8FC', '--accent':'#7B8FA6', '--blue':'#4a6080', '--ink':'#1a2535' },
    pink:   { '--bg':'#FFF0F3', '--paper':'#FFFAFC', '--accent':'#D4687A', '--blue':'#A0748A', '--ink':'#2C1A20' },
    dark:   { '--bg':'#1a1814', '--paper':'#242018', '--accent':'#D4835A', '--blue':'#8898a8', '--ink':'#F5F0E0' },
    sage:   { '--bg':'#EFF2EC', '--paper':'#F5F7F3', '--accent':'#5A7A5A', '--blue':'#7B8FA6', '--ink':'#1E2A1E' },
  };

  function setTheme(name, el) {
    document.querySelectorAll('.theme-opt').forEach(x => x.classList.remove('selected'));
    el.classList.add('selected');
    const t = themes[name];
    Object.entries(t).forEach(([k, v]) => document.documentElement.style.setProperty(k, v));
    showToast('‚ú¶ Theme applied!');
  }

  // ‚îÄ‚îÄ MODALS ‚îÄ‚îÄ
  function openPhotoModal() {
    document.getElementById('photoModal').classList.add('open');
  }
  function closePhotoModal() {
    document.getElementById('photoModal').classList.remove('open');
  }
  function openShareModal() {
    document.getElementById('shareModal').classList.add('open');
  }
  function closeShareModal() {
    document.getElementById('shareModal').classList.remove('open');
  }

  document.getElementById('photoModal').addEventListener('click', e => {
    if (e.target === document.getElementById('photoModal')) closePhotoModal();
  });
  document.getElementById('shareModal').addEventListener('click', e => {
    if (e.target === document.getElementById('shareModal')) closeShareModal();
  });

  function doShare() {
    closeShareModal();
    showToast('‚ú¶ Story saved to your camera roll!');
  }

  // ‚îÄ‚îÄ TOAST ‚îÄ‚îÄ
  let toastTimer;
  function showToast(msg) {
    const t = document.getElementById('toast');
    t.textContent = msg;
    t.classList.add('show');
    clearTimeout(toastTimer);
    toastTimer = setTimeout(() => t.classList.remove('show'), 2200);
  }

  // Add note when clicking empty area
  document.getElementById('diaryPage').addEventListener('dblclick', e => {
    if (e.target !== document.getElementById('diaryPage')) return;
    const page = document.getElementById('diaryPage');
    const r = page.getBoundingClientRect();
    const note = document.createElement('textarea');
    note.className = 'diary-note';
    note.style.top = (e.clientY - r.top - 10) + 'px';
    note.style.left = (e.clientX - r.left - 10) + 'px';
    note.placeholder = 'write something...';
    page.appendChild(note);
    note.focus();
    showToast('‚úèÔ∏è Double-tap to add notes anywhere!');
  });
</script>
</body>
</html>
